{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/src/examples/**",
    "**/templates/**",
    ".vscode",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/adventjs**/"
  ]
}
