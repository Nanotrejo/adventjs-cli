{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build current file",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": ["${file}", "--outDir", "${fileDirname}/dist", "--sourceMap"],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "tsc: build index.ts",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": [],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "tsc: build index.ts (DEV)",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "${workspaceFolder}/node_modules/.bin/tsc && node ${workspaceFolder}/scripts/copy-files.js"
      ],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "copy:files",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/scripts/copy-files.js"],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
