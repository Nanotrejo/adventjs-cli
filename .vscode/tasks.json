{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build current file",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": ["${file}", "--outDir", "${fileDirname}/dist", "--sourceMap"],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "tsc: build index.ts",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": [
        "${workspaceFolder}/src/index.ts",
        "--outDir",
        "${workspaceFolder}/dist",
        "--sourceMap"
      ],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
